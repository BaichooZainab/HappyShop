@model IEnumerable<Product>

@{
    ViewData["Title"] = "Index";
}



<div class="card shadow border-0 my-4">
    <div class="card-header bg-dark bg-gradient ml-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-white py-2">Product List</h2>
            </div>
        </div>
    </div>
    <div class="card-body p-4">
        <div class="row pb-3">
            <div class="col-6">
            </div>
            <div class="col-6 text-end">
                <a asp-controller="Product" asp-action="Upsert"
                   class="btn btn-primary">
                    <i class="bi bi-plus-circle"></i> &nbsp; Create New Product
                </a>
            </div>
        </div>
        <table class="table table-bordered table-striped" id="tblData" style="width:100%">
            <thead>

                <tr>
                    <th>Category</th>
                    <th>Product Name</th>
                    <th>Product Description</th>
                    <th>Quantity</th>
                    <th>Price</th>
                    <th>Brand Name</th>

                    <th>Image</th>
                   

                    <th></th>

                </tr>
            </thead>



        </table>
    </div>
</div>

@section Scripts{
    <script src="~/js/product.js"></script>
}
