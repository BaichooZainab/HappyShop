@model IEnumerable<Testimonial>

@{
    ViewData["Title"] = "Customer Testimonials";
}

<style>
    .testimonial-card:hover {
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        transform: translateY(-2px);
    }
</style>

<section class="testimonials">
    <div class="container">
        <div class="row">
            <div class="col-lg-8 mx-auto">
                <div class="card border-0 mt-4">
                    <div class="card-header bg-dark text-white">
                        <h2 class="text-center">Customer Testimonials</h2>
                    </div>
                    <div class="card-body">
                        <div class="row mb-3">
                            <div class="col-6"></div>
                            <div class="col-6 text-end">
                                <a asp-controller="Testimonial" asp-action="Create" class="btn btn-primary">
                                    <i class="bi bi-plus-circle"></i> Testify Here
                                </a>
                            </div>
                        </div>
                        <div class="row">
                            @foreach (var obj in Model)
                            {
                                <div class="col-md-4 mb-4">
                                    <div class="card testimonial-card">
                                        <img src="@Url.Content(obj.Image)" class="card-img-top" alt="Customer Image">
                                        <div class="card-body">
                                            <h5 class="card-title">@obj.Name</h5>
                                            <p class="card-text">@obj.Testimonials</p>
                                            <p class="card-text"><small class="text-muted">@obj.Date.ToString("yyy-MM-dd")</small></p>
                                           
                                        </div>
                                    </div>
                                </div>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
