@model IEnumerable<Product>

@{
    ViewData["Title"] = "Index";
}

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Product List</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="ProductContoller" asp-action="Add" class="btn btn-primary"><i class="bi bi-plus-circle"></i> &nbsp; Add a Product</a>
        </div>
    </div>
</div>

<table class="table table-bordered table-striped" style="width:100%">
    <thead>
        <tr>
            <th>Product Name</th>
            <th>Product Description</th>
            <th>Price</th>
            <th>Brand Name</th>
            <th>Quantity</th>
            <th>Created Date & Time</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var obj in Model.OrderBy(u => u.Quantity))
        {
            <tr>

                <td width="30%">
                    @obj.pname
                </td>

                <td width="50%">
                    @obj.pdesc
                </td>

                

                <td width="30%">
                    @obj.price
                </td>

                <td width="50%">
                    @obj.brandname
                </td>

                <td width="30%">
                    @obj.Quantity
                </td>

                <td width="40%">
                    @obj.CreatedDateTime
                </td>

                <td>
                    <div class="w-75 btn-group" role="group">
                        <a asp-controller="ProductContoller" asp-action="Edit" asp-route-id="@obj.Id"
                           class="btn btn-warning mx-2">
                            <i class="bi bi-pencil-square"></i>Edit
                        </a>

                        <a asp-controller="ProductContoller" asp-action="Delete" asp-route-id="@obj.Id"
                           class="btn btn-danger mx-2">
                            <i class="bi bi-trash3"></i>Delete
                        </a>
                    </div>
                </td>

            </tr>
        }
    </tbody>
</table>

