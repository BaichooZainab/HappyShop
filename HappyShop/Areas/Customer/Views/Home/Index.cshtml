    </div>
    <!-- container end.// -->
</section>
<!-- intro -->
<!-- Products -->
<section>
    <div class="card-body p-4">
        <div class="row">
            @foreach (var product in Model)
            {
                <div class="col-md-4">
                    <div class="card product-card">
                        <img src="@product.ImageUrl" alt="Product Image" class="card-img-top product-image">
                        <div class="card-body">
                            <h5 class="card-title">@product.Productname</h5>
                            <p class="card-text">@product.Description</p>
                            <p class="card-text">Price: @product.Prices</p>
                            <p class="card-text">Brandname: @product.Brandname</p>
                            <!-- Like Button  -->
                            <button class="btn btn-outline-success icon-hover">
                                <i class="bi bi-heart"></i> Like
                            </button>


                            <!-- Add to Cart Button  -->
                            <button class="btn btn-outline-warning icon-hover">
                                <i class="bi bi-cart-plus"></i> Add to Cart
                            </button>
                        </div>
                    </div>
                    <div class="mt-4 mb-4">
                        <a asp-action="Details" asp-route-productId="@product.Id" class="btn btn-primary bg-gradient border-0 form-control">
                            Details
                        </a>
                    </div>

                </div>
            }
        </div>
    </div>
   
</section>
