    ViewData["Title"] = "Index";
}

<script src="https://code.jquery.com/jquery-3.6.4.min.js"></script>

<style>

    /* Add this CSS for the hover effect on the product card */
    .product-card {
        transition: transform 0.3s ease-in-out;
    }

        .product-card:hover {
            transform: scale(1.05); /* You can adjust the scale factor for the desired zoom effect */
        }

    .custom-search-container {
        display: flex;
        align-items: center;
        justify-content: center;
        margin: 2rem;
    }

    .custom-search-input {
        width: 300px;
        padding: 10px;
        border: 2px solid #3498db;
        border-radius: 5px;
        outline: none;
    }

</style>




<!--  intro  -->
<section class="mt-3">
    <div class="container">
        <main class="card p-3 shadow-2-strong">
            <div class="row justify-content-center">
                <img src="~/images/" class="w-100 rounded-4 shadow-4"
                     alt="" />
                <div class="col-lg-9">
                    <div class="card-banner h-auto p-5 bg-primary rounded-5" style="height: 350px;">
                        <div>
                            <h2 class="text-white">
                                Great products with <br />
                                best deals
                            </h2>
                            <p class="text-white">No matter how far along you are in your sophistication as an amateur astronomer, there is always one.</p>
                           
                        </div>
                    </div>
                </div>
            </div>
        </main>
    </div>
    <!-- container end.// -->
</section>
<!-- intro -->
<!-- Products -->
<section>
    <div class="card-body p-4">

     
        <div class="custom-search-container">
            <input type="text" id="searchInput" class="custom-search-input" placeholder="Search products...">
           
        </div>



        <div class="row">
            @foreach (var product in Model.Products)
            {
                <div class="col-md-4">
                    <div class="card product-card">
                        <img src="@product.ImageUrl" alt="Product Image" class="card-img-top product-image">
                        <div class="card-body">
                            <h5 class="card-title">@product.Productname</h5>
                            <p class="card-text">@product.Description</p>
                            <p class="card-text">Price: @product.Prices</p>
                            <p class="card-text">Brandname: @product.Brandname</p>
                          @*   <!-- Like Button  -->
                            <button class="btn btn-outline-success icon-hover">
                                <i class="bi bi-heart"></i> Like
                            </button> *@


                            <div class="mt-4 mb-4">
                                <a asp-action="Details" asp-route-productId="@product.Id" class="btn btn-primary bg-gradient border-0 form-control">
                                    Details
                                </a>
                            </div>
                        </div>
                    </div>
                   

                </div>
            }
        </div>
    </div>
   
</section>
